# Configuration Backend - Projet Memory
# Variables d'environnement pour le développement local

# Configuration Base de données MySQL
DB_NAME=Memory
DB_USER=root
DB_PASS=root
DB_HOST=localhost
DB_PORT=3306

# Configuration MAMP - Socket Unix (prioritaire sur host/port)
DB_SOCKET=/Applications/MAMP/tmp/mysql/mysql.sock

# Configuration JWT
JWT_SECRET_KEY=memory_secret_key_change_in_production
JWT_EXPIRE_TIME=3600

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Mode debug
DEBUG_MODE=true
LOG_LEVEL=error